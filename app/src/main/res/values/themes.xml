<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SergeyPortfolioApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:layoutDirection">ltr</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SergeyPortfolioApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SergeyPortfolioApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SergeyPortfolioApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleText" parent="TextAppearance.AppCompat.Display1">

        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">cursive</item>

    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat.Display1">

        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/subtitle_textSize</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>


    <style name="CardStyle">
        <item name="strokeColor">?colorSecondary</item>
        <item name="strokeWidth">10dp</item>
    </style>

    <style name="CardShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">16dp</item>
    </style>



    <dimen name="title_text_size">30sp</dimen>
</resources>